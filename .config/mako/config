max-history=10
sort=-time

# Icons
icons=1
max-icon-size=48
icon-location=left

# Text formatting
font=sans-serif 11
markup=1
text-alignment=left
format=<b>%s</b>\n%b

# Actions
actions=1

# Different urgency levels
[urgency=low]
border-color=#89b4fa
default-timeout=5000

[urgency=normal]
border-color=#f5c2e7
default-timeout=8000

[urgency=high]
border-color=#fab387
default-timeout=0
text-color=#fab387

[urgency=critical]
border-color=#f38ba8
background-color=#2d1b1b
text-color=#f38ba8
default-timeout=0

# Grouped notifications
[grouped]
format=(%g) <b>%s</b>\n%b

# Do not disturb mode example
[mode=dnd]
invisible=1
